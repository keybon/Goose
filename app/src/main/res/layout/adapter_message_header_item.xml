<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <com.bigkoo.convenientbanner.ConvenientBanner
        android:id="@+id/adapter_message_convenientBanner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_margin_150" />

    <LinearLayout
        style="@style/common_match_wrap"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_margin_35"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/recommend_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/table_recommend_time"
                android:textColor="@color/selector_table_color" />

            <TextView
                android:id="@+id/recommend_money"
                style="@style/common_wrap"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/table_recommend_money"
                android:textColor="@color/selector_table_color"
                />

            <TextView
                android:id="@+id/recommend_like"
                style="@style/common_wrap"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/table_recommend_like"
                android:textColor="@color/selector_table_color"
                />
        </LinearLayout>

        <RelativeLayout
            style="@style/common_match_wrap"
            android:gravity="bottom">

            <ImageView
                android:id="@+id/recommend_time_line"
                style="@style/common_wrap"
                android:layout_alignParentLeft="true"
                android:src="@drawable/timeline"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/recommend_money_line"
                style="@style/common_wrap"
                android:layout_centerInParent="true"
                android:src="@drawable/moneyline"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/recommend_like_line"
                style="@style/common_wrap"
                android:layout_alignParentRight="true"
                android:src="@drawable/likeline"
                android:visibility="gone" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>