<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/tab_message"
        android:layout_width="64dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/message_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="关注"
            android:textColor="#C8C8C8"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/message_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="关注"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:visibility="invisible"/>
        <View
            android:id="@+id/message_indicator"
            android:layout_width="60dp"
            android:layout_height="2dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1px"
            android:background="#FFFFFF"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/tab_account"
        android:layout_width="64dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/account_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="私信"
            android:textColor="#C8C8C8"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/account_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="私信"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:visibility="invisible"/>
        <View
            android:id="@+id/account_indicator"
            android:layout_width="60dp"
            android:layout_height="2dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1px"
            android:background="#FFFFFF"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="64dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">
        <LinearLayout
            android:id="@+id/tab_news"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical">
                <TextView
                    android:id="@+id/news_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="动态"
                    android:textColor="#C8C8C8"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/news_large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="动态"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:visibility="invisible"/>
            </RelativeLayout>
        </LinearLayout>
        <View
            android:id="@+id/news_indicator"
            android:layout_width="60dp"
            android:layout_height="2dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1px"
            android:background="#FFFFFF"/>
    </RelativeLayout>

</merge>