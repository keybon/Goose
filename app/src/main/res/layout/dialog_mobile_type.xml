<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_coner_alph1_black"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/shape_dialog_common"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="70dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_content"
                style="@style/common_wrap"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="22dp"
                android:gravity="center"
                android:text="@string/dialog_set_hint"
                android:textColor="@color/common_black"
                android:textSize="16sp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/nickname_edt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_margin_40"
                android:layout_marginBottom="@dimen/activity_margin_10"
                android:layout_marginLeft="@dimen/activity_margin_12"
                android:layout_marginRight="@dimen/activity_margin_12"
                android:background="@color/common_white"
                android:gravity="center"
                android:maxLength="20" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/activity_margin_10"
            android:background="#e5e5e5" />

        <LinearLayout
            android:id="@+id/ll_sure"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_margin_45"
            android:gravity="center">

            <TextView
                android:id="@+id/ll_sure_cancel"
                style="@style/common_wrap"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/dialog_init_cancel"
                android:textColor="@color/dialog_btn_color"
                android:textSize="17sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/ll_sure_line"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#E6E6E6"
                android:visibility="gone" />

            <TextView
                android:id="@+id/ll_sure_ok"
                style="@style/common_wrap"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/dialog_init_ok"
                android:textColor="@color/dialog_btn_color"
                android:textSize="17sp" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>