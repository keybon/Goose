<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/template_item_img"
        android:layout_gravity="center"
        android:scaleType="center"
        android:src="@drawable/template_1"
        />
    <TextView
        android:id="@+id/template_item_v"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_margin_36"
        android:gravity="center"
        android:src="@drawable/ico_login_act"
        android:background="@color/template_bg"
        android:textColor="@color/common_white"
        android:text="@string/template_item_tv"
        android:textSize="@dimen/activity_textsize_18"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/activity_margin_15"
        android:visibility="gone"
        />

</RelativeLayout>