<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/common_match_wrap"
    android:orientation="vertical">


    <include layout="@layout/chatting_item_msg_time" />

    <LinearLayout
        style="@style/common_match_wrap"
        android:gravity="center_vertical|left"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/single_chat_left_portrait"
            style="@style/simple_common_view"
            android:layout_width="@dimen/activity_margin_45"
            android:layout_height="@dimen/activity_margin_45"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_margin_12" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chat_bubble_left">

            <TextView
                android:id="@+id/single_chat_left_content"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/activity_margin_40"
                android:layout_marginLeft="@dimen/activity_margin_10"
                android:layout_marginRight="@dimen/activity_margin_10"
                android:gravity="center"
                android:text="一起去吃饭！"
                android:textColor="@color/login_edit_text"
                android:textSize="@dimen/activity_textsize_15" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>