<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_white"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_margin_100"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:gravity="center"
        >
        <ImageView
            style="@style/common_wrap"
            android:src="@drawable/ico_logo"
            />
        <TextView
            style="@style/common_wrap"
            android:textColor="@color/login_title"
            android:text="@string/app_name"
            android:layout_marginTop="@dimen/activity_margin_15"
            android:textSize="@dimen/activity_textsize_20"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/select_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/activity_margin_100"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="@dimen/activity_margin_0"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:paddingLeft="@dimen/activity_margin_80"
            >
            <ImageView
                android:id="@+id/weichat_login"
                style="@style/common_wrap"
                android:src="@drawable/ico_wechat"
                />
            <TextView
                style="@style/common_wrap"
                android:textColor="@color/wechat_login_select_text"
                android:layout_marginTop="@dimen/activity_margin_15"
                android:textSize="@dimen/activity_textsize_16"
                android:text="@string/login_wechat"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/activity_margin_0"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:paddingRight="@dimen/activity_margin_80"
            >
            <ImageView
                android:id="@+id/mobile_login"
                style="@style/common_wrap"
                android:src="@drawable/ico_mobile"
                />
            <TextView
                style="@style/common_wrap"
                android:layout_marginTop="@dimen/activity_margin_15"
                android:textColor="@color/wechat_login_select_text"
                android:textSize="@dimen/activity_textsize_16"
                android:text="@string/login_mobile"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@+id/select_login"
        android:layout_marginBottom="@dimen/activity_margin_30"
        android:paddingLeft="@dimen/activity_margin_20"
        android:paddingRight="@dimen/activity_margin_20"
        >
        <TextView
            android:layout_width="@dimen/activity_margin_0"
            android:layout_height="@dimen/activity_margin_1"
            android:background="@color/login_cutline"
            android:layout_weight="1"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="@dimen/activity_margin_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/login_mid_hint"
            android:textSize="@dimen/activity_textsize_15"
            android:textColor="@color/login_select_text"
            android:gravity="center"
            />
        <TextView
            android:layout_width="@dimen/activity_margin_0"
            android:layout_height="@dimen/activity_margin_1"
            android:background="@color/login_cutline"
            android:layout_weight="1"
            android:layout_gravity="center"
            />

    </LinearLayout>



</RelativeLayout>