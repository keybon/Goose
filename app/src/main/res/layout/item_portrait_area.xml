<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/common_match_wrap"
    >

    <ImageView
        android:id="@+id/userinfo_activity_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:background="@drawable/personal_homepage"
        />

    <LinearLayout
        style="@style/common_match_wrap"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/userinfo_left_back"
            android:layout_width="@dimen/activity_margin_45"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_margin_15"
            android:layout_marginTop="@dimen/activity_margin_15"
            >

            <ImageView
                style="@style/common_wrap"
                android:background="@drawable/ico_white_back"
                />
        </LinearLayout>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/userinfo_activity_portrait"
            style="@style/simple_common_view_boder"
            android:layout_width="@dimen/activity_margin_60"
            android:layout_height="@dimen/activity_margin_60"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/activity_margin_15" />

        <TextView
            android:id="@+id/userinfo_activity_nickname"
            style="@style/common_wrap"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/activity_margin_12"
            android:text="@string/dialog_nickname_edit"
            android:textColor="@color/common_white"
            android:textSize="@dimen/activity_textsize_16"
            android:textStyle="bold" />

        <LinearLayout
            style="@style/common_wrap"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/activity_margin_12"
            android:orientation="horizontal">

            <TextView
                style="@style/common_wrap"
                android:text="@string/table_item_focus"
                android:textColor="@color/common_white"
                android:textSize="@dimen/activity_textsize_14" />

            <TextView
                android:id="@+id/userinfo_activity_aettion"
                style="@style/common_wrap"
                android:layout_marginLeft="@dimen/activity_margin_10"
                android:text="@string/table_item_focus"
                android:textColor="@color/common_white"
                android:textSize="@dimen/activity_textsize_14" />

            <TextView
                android:layout_width="@dimen/activity_margin_1"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/activity_margin_15"
                android:layout_marginRight="@dimen/activity_margin_15"
                android:background="@color/common_white" />

            <TextView
                style="@style/common_wrap"
                android:text="@string/userinfo_activity_fans"
                android:textColor="@color/common_white"
                android:textSize="@dimen/activity_textsize_14" />

            <TextView
                android:id="@+id/userinfo_activity_fans"
                style="@style/common_wrap"
                android:layout_marginLeft="@dimen/activity_margin_10"
                android:text="@string/table_item_focus"
                android:textColor="@color/common_white"
                android:textSize="@dimen/activity_textsize_14" />
        </LinearLayout>

        <TextView
            android:id="@+id/userinfo_activity_signature"
            style="@style/common_match_wrap"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/activity_margin_12"
            android:layout_marginLeft="@dimen/activity_margin_10"
            android:layout_marginRight="@dimen/activity_margin_10"
            android:layout_marginTop="@dimen/activity_margin_12"
            android:text="@string/myinfo_signture"
            android:textColor="@color/common_white"
            android:gravity="center"
            android:textSize="@dimen/activity_textsize_14" />
    </LinearLayout>
</FrameLayout>