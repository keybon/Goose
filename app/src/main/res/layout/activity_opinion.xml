<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <EditText
        android:id="@+id/opinion_et"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_margin_210"
        android:layout_marginTop="@dimen/activity_margin_15"
        android:layout_marginLeft="@dimen/activity_margin_12"
        android:layout_marginRight="@dimen/activity_margin_12"
        android:maxLength="150"
        android:background="@color/common_white"
        android:textColorHint="@color/launcher_bom_text"
        android:gravity="top|left"
        android:hint="@string/opinion_hint"
        android:padding="@dimen/activity_margin_15"
        />
    <TextView
        android:id="@+id/opinion_text"
        style="@style/common_match_wrap"
        android:layout_marginRight="@dimen/activity_margin_12"
        android:layout_marginTop="@dimen/activity_margin_15"
        android:textColor="@color/wechat_login_text"
        android:text="@string/opinion_init_text"
        android:textSize="@dimen/activity_textsize_15"
        android:gravity="right"
        />
</LinearLayout>