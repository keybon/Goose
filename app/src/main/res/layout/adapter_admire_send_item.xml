<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/activity_margin_66"
    android:background="@color/common_white"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/activity_margin_15"
        android:layout_alignParentLeft="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/admire_send_nickname"
            style="@style/common_wrap"
            android:textColor="@color/login_edit_text"
            android:textSize="@dimen/activity_textsize_16"
            android:text="我送给小希：5元"
            />
        <TextView
            android:id="@+id/admire_send_time"
            style="@style/common_wrap"
            android:textColor="@color/launcher_bom_text"
            android:textSize="@dimen/activity_textsize_14"
            android:layout_marginTop="@dimen/activity_margin_5"
            android:text="2017年10月7日"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/admire_send_count"
        style="@style/common_wrap"
        android:gravity="right"
        android:layout_alignParentRight="true"
        android:text="+5.00"
        android:layout_marginRight="@dimen/activity_margin_15"
        android:layout_centerVertical="true"
        android:textSize="@dimen/activity_textsize_15"
        android:textColor="@color/colorAccent"
        />

</RelativeLayout>