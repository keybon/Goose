<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:background="@drawable/shape_dialog_common"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_content"
            style="@style/common_wrap"
            android:layout_marginBottom="22dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="22dp"
            android:text="@string/dialog_nickname_hint"
            android:textColor="@color/wechat_login_text"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/dialog_edit_nickname"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_margin_30"
            android:layout_marginLeft="@dimen/activity_margin_20"
            android:layout_marginRight="@dimen/activity_margin_20"
            android:layout_marginBottom="@dimen/activity_margin_15"
            android:background="@drawable/shape_edit_troke"
            android:paddingLeft="@dimen/activity_margin_10"
            android:hint="@string/dialog_nickname_edit"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/activity_margin_10"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e5e5e5"/>

    <LinearLayout
        android:id="@+id/ll_sure"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_margin_45"
        android:gravity="center">

        <TextView
            android:id="@+id/ll_sure_cancel"
            style="@style/common_wrap"
            android:text="暂不修改"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/dialog_btn_color"
            android:visibility="visible"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/ll_sure_line"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:background="#E6E6E6"
            />
        <TextView
            android:id="@+id/ll_sure_ok"
            style="@style/common_wrap"
            android:text="@string/dialog_init_ok"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/dialog_btn_color"
            android:textSize="17sp" />

    </LinearLayout>


</LinearLayout>