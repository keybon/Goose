<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.emao.application.ui.photo.ImageGridView
        android:id="@+id/photo_browser_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="3"
        android:horizontalSpacing="2dp"
        android:verticalSpacing="2dp"
        android:background="@color/common_black"/>

    <TextView
        android:id="@+id/label_date"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_margin_23"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/activity_margin_8"
        android:text="本周"
        android:textColor="@color/common_white"
        android:textSize="@dimen/activity_textsize_14"
        android:background="@color/photo_lade_text"
        android:visibility="gone"/>
</RelativeLayout>