        <item name="android:textColor">@color/mine_common_textview</item>
        <item name="android:textSize">@dimen/activity_textsize_15</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/activity_margin_15</item>
    </style>

    <style name="mine_common_cutline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/activity_margin_0.5</item>
        <item name="android:background">@color/login_cutline</item>
    </style>

