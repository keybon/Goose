<resources xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="GooseBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarSize">@dimen/action_bar_size</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="buttonStyle">@style/AppCompatTheme.Widget.Button</item>
    </style>


    <style name="AppCompatTheme.Main" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarSize">@dimen/action_bar_size</item>
        <item name="buttonStyle">@style/AppCompatTheme.Widget.Button</item>
    </style>

    <style name="bottomdialog" parent="AlertDialog.AppCompat">

        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:fullBright">@color/transparent</item>
        <item name="android:fullDark">@color/transparent</item>
        <item name="android:topBright">@color/transparent</item>
        <item name="android:topDark">@color/transparent</item>
        <item name="android:borderlessButtonStyle">@color/transparent</item>

    </style>

    <style name="AppCompatTheme.Widget.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textAllCaps">false</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>

    <style name="AppCompatTheme.ActionOverflowMenuStyle" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
    </style>

    <style name="AppCompatTheme.Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/ic_launcher_background</item>
    </style>


    <style name="common_progress_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>


    <!--            公共标题返回                                  -->
    <style name="common_layout_back_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ico_back</item>
    </style>
    <!--  公共自适应宽高样式  -->
    <style name="common_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--  公共自适应宽match高wrap样式  -->
    <style name="common_match_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--  公共自适应宽wrap高match样式  -->
    <style name="common_wrap_match">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!--  公共宽高match样式  -->
    <style name="common_match_match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!--                公共标题文字                            -->
    <style name="common_layout_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/login_title</item>
        <item name="android:textSize">@dimen/activity_textsize_18</item>
        <item name="android:typeface">serif</item>
    </style>
    <style name="actionbar_text_right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/actionbar_text_right</item>
        <item name="android:textSize">@dimen/activity_textsize_16</item>
    </style>
    <!-- 公共分割线 -->
    <style name="common_layout_cutline">
        <item name="android:layout_height">@dimen/activity_margin_0.5</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/login_cutline</item>
    </style>

    <!-- 手机号登录输入框样式 -->
    <style name="Login_Mobile_EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textColor">@color/login_edit_text</item>
        <item name="android:textColorHint">@color/login_edit_hint_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="main_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/login_edit_text</item>
        <item name="android:textSize">@dimen/activity_textsize_15</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!--  手机号登录textview样式  -->

    <style name="Login_Mobile_TextView">
        <item name="android:layout_width">@dimen/activity_margin_60</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/login_text_color</item>
        <item name="android:textSize">@dimen/activity_textsize_14</item>
    </style>

    <!--  手机号登录img样式  -->

    <style name="Login_Mobile_img">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/activity_margin_15</item>
    </style>

    <style name="mine_username_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/common_white</item>
        <item name="android:textSize">@dimen/activity_textsize_17</item>
    </style>

    <style name="mine_signature">
